    <script type="text/javascript">
    	function alterarSenha(){
    		var senhaAtual, novaSenha, confSenha;
    		senhaAtual = document.getElementById("senhaAtual");
    		novaSenha = document.getElementById("novaSenha");
    		confSenha = document.getElementById("confSenha");
    		
    		var param = "senhaAtual="+senhaAtual+"novaSenha="+novaSenha+
    		"confSenha"+confSenha;
    	}
    	
    	function acessarApi(sa, ns, cs){
    		const api = new XMLHttpRequest();
    		api.open("post","alterarSenha");
    		api.send();
    	}
    
